<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dateTimeTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listView"  />



    <ImageButton
        android:id="@+id/photoButton"
        android:layout_width="156dp"
        android:layout_height="141dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="44dp"
        android:background="@drawable/photoalbum"
        app:layout_constraintEnd_toStartOf="@+id/gpsButton"
        app:layout_constraintTop_toBottomOf="@+id/dateTimeTextview" />

    <ImageButton
        android:id="@+id/gpsButton"
        android:layout_width="124dp"
        android:layout_height="147dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/gps_logo"
        android:contentDescription="gpsLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dateTimeTextview" />

    <ImageButton
        android:id="@+id/phoneButton"
        android:layout_width="124dp"
        android:layout_height="147dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/phone"
        app:layout_constraintEnd_toStartOf="@+id/emergencyButton"
        app:layout_constraintTop_toBottomOf="@+id/photoButton" />

    <ImageButton
        android:id="@+id/emergencyButton"
        android:layout_width="163dp"
        android:layout_height="148dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/heartlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gpsButton" />



</androidx.constraintlayout.widget.ConstraintLayout>